{
  "$schema": "https://railway.com",
  "services": [
    {
      "name": "minio",
      "source": { "image": "minio/minio:latest" },
      "command": "server /data --console-address :9001",
      "env": {
        "MINIO_ROOT_USER": "admin",
        "MINIO_ROOT_PASSWORD": "${{RAILWAY_RANDOM_STRING}}"
      }
    },
    {
      "name": "backend",
      "source": { "repo": "https://github.com/premaicommerce/hypebackend" },
      "build": { "builder": "NIXPACKS" },
      "deploy": {
        "startCommand": "npx medusa migrations run && npx medusa start",
        "healthcheckPath": "/health"
      },
      "env": {
        "NODE_ENV": "production",
        "DATABASE_URL": "${{Postgres.DATABASE_URL}}",
        "JWT_SECRET": "${{RAILWAY_RANDOM_STRING}}",
        "COOKIE_SECRET": "${{RAILWAY_RANDOM_STRING}}",
        "DISABLE_MEDUSA_ADMIN": "false",
        "NIXPACKS_NODE_VERSION": "20",
        "STORE_CORS": "https://${{frontend.RAILWAY_PUBLIC_DOMAIN}}",
        "ADMIN_CORS": "https://${{backend.RAILWAY_PUBLIC_DOMAIN}}",
        "AUTH_CORS": "https://${{frontend.RAILWAY_PUBLIC_DOMAIN}},https://${{backend.RAILWAY_PUBLIC_DOMAIN}}",
        "S3_BUCKET": "medusa",
        "S3_REGION": "us-east-1",
        "S3_ACCESS_KEY_ID": "${{minio.MINIO_ROOT_USER}}",
        "S3_SECRET_ACCESS_KEY": "${{minio.MINIO_ROOT_PASSWORD}}",
        "S3_URL": "http://${{minio.RAILWAY_PRIVATE_DOMAIN}}:9000/medusa"
      }
    },
    {
      "name": "frontend",
      "source": { "repo": "https://github.com/premaicommerce/hypestorefront" },
      "build": { "builder": "NIXPACKS" },
      "deploy": {
        "startCommand": "npm run start"
      },
      "env": {
        "NODE_ENV": "production",
        "NEXT_PUBLIC_MEDUSA_BACKEND_URL": "https://${{backend.RAILWAY_PUBLIC_DOMAIN}}"
      }
    }
  ]
}
