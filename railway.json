{
  "$schema": "https://railway.app/railway.schema.json",
  "plugins": [{ "name": "postgresql" }],
  "services": [
    {
      "name": "minio",
      "source": {
        "image": "minio/minio:latest"
      },
      "command": "server /data --console-address :9001",
      "env": {
        "MINIO_ROOT_USER": "${{RAILWAY_RANDOM_STRING}}",
        "MINIO_ROOT_PASSWORD": "${{RAILWAY_RANDOM_STRING}}"
      }
    },
    {
      "name": "medusa-backend",
      "source": {
        "repo": "https://github.com/Prem-upwork/hypebackend"
      },
      "env": {
        "NODE_ENV": "production",
        "DATABASE_URL": "${{Postgres.DATABASE_URL}}",

        "JWT_SECRET": "${{RAILWAY_RANDOM_STRING}}",
        "COOKIE_SECRET": "${{RAILWAY_RANDOM_STRING}}",

        "S3_BUCKET": "medusa",
        "S3_REGION": "us-east-1",
        "S3_ACCESS_KEY_ID": "${{minio.MINIO_ROOT_USER}}",
        "S3_SECRET_ACCESS_KEY": "${{minio.MINIO_ROOT_PASSWORD}}",
        "S3_URL": "http://${{minio.RAILWAY_PRIVATE_DOMAIN}}:9000/medusa"
      }
    },
    {
      "name": "frontend",
      "source": {
        "repo": "https://github.com/Prem-upwork/hypestorefront"
      },
      "env": {
        "NODE_ENV": "production",
        "NEXT_PUBLIC_MEDUSA_BACKEND_URL": "https://${{medusa-backend.RAILWAY_PUBLIC_DOMAIN}}",
        "JWT_SECRET": "${{RAILWAY_RANDOM_STRING}}",
        "COOKIE_SECRET": "${{RAILWAY_RANDOM_STRING}}"
      }
    }
  ]
}
